pipeline {
    agent any
    environment {
        IMAGE_NAME = "soodappans/nodejs-app"
        DOCKERHUB = credentials('dockerhub-creds')   // Docker Hub creds
        EC2_SSH = credentials('ec2-ssh-key')         // EC2 private key stored in Jenkins
    }
    triggers {
        githubPush()   // Trigger build automatically on GitHub push
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                sh "docker build -t $IMAGE_NAME:${BUILD_NUMBER} ."
            }
        }
        stage('Push to Docker Hub') {
            steps {
                sh "echo $DOCKERHUB_PSW | docker login -u $DOCKERHUB_USR --password-stdin"
                sh "docker push $IMAGE_NAME:${BUILD_NUMBER}"
            }
        }
        stage('Deploy to EC2') {
            steps {
                // SSH into EC2 and deploy container
                sh """
                ssh -i $EC2_SSH ubuntu@<your-ec2-public-ip> \\
                "docker pull $IMAGE_NAME:${BUILD_NUMBER} && \\
                 docker rm -f nodejs-app || true && \\
                 docker run -d --name nodejs-app -p 3000:3000 $IMAGE_NAME:${BUILD_NUMBER}"
                """
            }
        }
    }
}
