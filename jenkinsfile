pipeline {
    agent any

    environment {
        IMAGE_NAME = "soodappans/nodejs-app"   // Your DockerHub repo
    }

    triggers {
        githubPush()   // Auto-trigger on GitHub push
    }

    stages {
        stage('Checkout') {
            steps {
                // Pull code + Dockerfile + Jenkinsfile from GitHub
                checkout scm
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build image with unique tag (BUILD_NUMBER)
                    docker.build("${IMAGE_NAME}:${BUILD_NUMBER}")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    // Login to DockerHub using Jenkins credentials
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds') {
                        def app = docker.image("${IMAGE_NAME}:${BUILD_NUMBER}")
                        // Push both build-specific and latest tags
                        app.push()
                        app.push("latest")
                    }
                }
            }
        }

        stage('Deploy Container') {
            steps {
                script {
                    // Stop old container if exists, run new one
                    sh """
                    docker rm -f nodejs-app || true
                    docker run -d --name nodejs-app -p 3000:3000 ${IMAGE_NAME}:${BUILD_NUMBER}
                    """
                }
            }
        }
    }
}
